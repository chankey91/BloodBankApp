# Production Environment Configuration
# Copy this file to your server as .env in the backend directory

# Environment
NODE_ENV=production

# Server Configuration
PORT=5000
HOST=0.0.0.0

# Database Configuration
MONGO_URI=mongodb://localhost:27017/bloodbank

# JWT Configuration
JWT_SECRET=CHANGE_THIS_TO_A_STRONG_SECRET_KEY_IN_PRODUCTION
JWT_EXPIRE=30d

# Email Configuration (Gmail)
EMAIL_SERVICE=gmail
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_gmail_app_password

# SMS Configuration (Twilio - Optional)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# WhatsApp Configuration (Optional)
WHATSAPP_API_KEY=your_whatsapp_api_key
WHATSAPP_PHONE_NUMBER=your_whatsapp_number

# Frontend URL
CLIENT_URL=http://103.230.227.5

# Google Maps API Key
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Firebase Cloud Messaging (Optional)
FCM_SERVER_KEY=your_fcm_server_key

# Logging
LOG_LEVEL=info

# CORS Configuration
CORS_ORIGIN=http://103.230.227.5

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_SECRET=CHANGE_THIS_TO_A_STRONG_SESSION_SECRET

